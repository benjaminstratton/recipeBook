<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs')%>
    <title>Edit <%= restaurant.name %></title>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="container container-form">
      <h2 class="text-center mt-5">Edit <%=restaurant.name%></h2>
      <form
        action="/<%=restaurant.city%>/<%=restaurant.id%>?_method=PUT"
        method="POST"
        class="form"
      >
        <div class="form-group m-3">
          <label for="restaurantName">Restaurant Name</label>
          <input
            type="text"
            name="name"
            class="form-control"
            id="restaurantName"
            value="<%=restaurant.name%>"
          />
        </div>
        <div class="form-group m-3">
          <label for="restaurantImg">Restaurant Image</label>
          <input
            type="text"
            name="img"
            class="form-control"
            id="restaurantImg"
            value="<%=restaurant.img%>"
          />
        </div>
        <div class="form-group m-3">
          <label for="restaurantDescription">Restaurant Description</label>
          <input
            type="text"
            name="description"
            class="form-control"
            id="restaurantDescription"
            value="<%=restaurant.description%>"
          />
        </div>
        <div class="form-group m-3">
          <label for="restaurantType">Restaurant Type</label>
          <input
            type="text"
            name="type"
            class="form-control"
            id="restaurantType"
            value="<%=restaurant.type%>"
          />
        </div>

        <div class="form-group m-3">
          <label for="restaurantAddress">Restaurant Address</label>
          <input
            type="text"
            name="address"
            class="form-control"
            id="restaurantAddress"
            value="<%=restaurant.address%>"
          />
        </div>
        <div class="d-flex justify-content-center">
          <input type="submit" value="SUBMIT" class="btn btn-light px-5" />
        </div>
      </form>
    </div>
    <%- include('./partials/footer.ejs') %> <%-include('./partials/scripts.ejs')
    %>
  </body>
</html>
