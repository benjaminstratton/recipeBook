<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs')%>
        <title>Add New Restaurant</title>
    </head>
  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="container" id="form-bodies">
      <h2 class="text-center mt-5">Add a New Restaurant</h2>
      <form
        action="/restaurantfinder/paris"
        method="POST"
      >
        <div class="form-group m-3">
          <label for="restaurantName">Restaurant Name</label>
          <input
            type="text"
            name="name"
            class="form-control"
            id="restaurantName"
          />
        </div>
        <div class="form-group m-3">
          <label for="restaurantImg">Restaurant Image</label>
          <input
            type="text"
            name="img"
            class="form-control"
            id="restaurantImg"
          />
        </div>
        <div class="form-group m-3">
          <label for="restaurantDescription">Restaurant Description</label>
          <input
            type="text"
            name="description"
            class="form-control"
            id="restaurantDescription"
          />
        </div>
        <div class="form-group m-3">
          <label for="restaurantAddress">Restaurant Address</label>
          <input
            type="text"
            name="address"
            class="form-control"
            id="restaurantAddress"
          />
        </div>
        <div class="d-flex justify-content-center">
          <input type="submit" value="SUBMIT" class="btn btn-light px-5" />
        </div>
      </form>
    </div>
    <%- include('./partials/footer.ejs') %>
    <%- include('./partials/scripts.ejs') %>
  </body>
</html>
