<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs')%>
    <title>Restaurant Finder</title>
  </head>
  <body>
    <%- include('./partials/nav.ejs')%>
    <section class="content-banner">
      <div class="container">
        <div class="row d-flex justify-content-center">
          <div class="col-md-12">
            <div class="banner-con text-center py-5">
              <h1 class="first-title">Choose the city you want to visit!</h1>
              <p class="banner-des">
                And pick one of the many places where you will be served amazing
                food made by the best chef's all around the world
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="main">
      <div class="container">
        <div class="row mb-3 justify-content-center">
          <div class="card card_paris col-3 mx-3" style="height: 15rem">
            <a href="/paris">
              <div class="card_title">
                <h2>PARIS</h2>
              </div>
            </a>
          </div>
          <div class="card card_ny col-3 mx-3" style="height: 15rem">
            <a href="/ny">
              <div class="card_title">
                <h2>NY</h2>
              </div>
            </a>
          </div>
          <div class="card card_london col-3 mx-3" style="height: 15rem">
            <a href="/london">
              <div class="card_title">
                <h2>LONDON</h2>
              </div>
            </a>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="card card_la col-3 mx-3" style="height: 15rem">
            <a href="/la">
              <div class="card_title">
                <h2>LA</h2>
              </div>
            </a>
          </div>
          <div class="card card_dubai col-3 mx-3" style="height: 15rem">
            <a href="/dubai">
              <div class="card_title">
                <h2>DUBAI</h2>
              </div>
            </a>
          </div>
          <div class="card card_sydney col-3 mx-3" style="height: 15rem">
            <a href="/sydney">
              <div class="card_title">
                <h2>SYDNEY</h2>
              </div>
            </a>
          </div>
        </div>
      </div>
    </section>
    <%- include('./partials/footer.ejs')%> <%-
    include('./partials/scripts.ejs')%>
  </body>
</html>
