<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs')%>
    <title><%=restaurant[0].city%></title>
  </head>
  <body>
    <%- include('./partials/nav.ejs')%>
    <section class="content-banner">
      <div class="container">
        <div class="row d-flex justify-content-center">
          <div class="col-md-12">
            <div class="banner-con text-center py-5">
              <h1 class="secondary-title"><%=restaurant[0].city%></h1>
              <p class="secondary-des">
                The best restaurants hand-picked just for you
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="main">
      <div class="container d-flex flex-column gap-5">
        <div class="row d-flex justify-content-center gap-3">
          <%for(let i = 0; i< restaurant.length; i++){%>
          <div class="col-3 has-bg-img restaurant">
            <a
              href="/restaurantfinder/<%=restaurant[0]
            .city %>/<%=restaurant[i].id%>"
              ><img
                class="bg-img rounded"
                src="<%=restaurant[i].img%>"
                alt="<%=restaurant[i].name%>"
              />
              <div class="card_title">
                <h2><%=restaurant[i].name%></h2>
              </div>
            </a>
          </div>
          <% }%>
        </div>
        <div class="row d-flex justify-content-center">
          <div class="col-3 text-center">
            <a href="/restaurantfinder/new" class="btn btn-light px-5 py-3"
              >Add New Restaurant</a
            >
          </div>
        </div>
      </div>
    </section>
    <%- include('./partials/footer.ejs')%> <%-
    include('./partials/scripts.ejs')%>
  </body>
</html>
