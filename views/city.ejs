<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs')%>
    <title><%=restaurant[0].city%></title>
  </head>
  <body>
    <%- include('./partials/nav.ejs')%>
    <section class="content-banner">
      <div class="container">
        <div class="row d-flex justify-content-center">
          <div class="col-md-12">
            <div class="banner-con text-center">
              <h1 class="first-title"><%=restaurant[0].city%></h1>
              <p class="banner-des">The most exclusive restaurants</p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <div class="container d-flex flex-column gap-5 my-5">
      <div class="row d-flex justify-content-center">
        <%for(let i = 0; i< (restaurant.length - 3); i++){%>
        <div
          class="col-4 has-bg-img bg-blend-overlay restaurant"
          style="height: 15rem"
        >
          <a href="/restaurantfinder/paris/<%=restaurant[i].id%>"
            ><img
              class="bg-img"
              src="<%=restaurant[i].img%>"
              alt="<%=restaurant[i].name%>"
            />
            <div class="card_title">
              <h2><%=restaurant[i].name%></h2>
            </div>
          </a>
        </div>
        <% }%>
      </div>
      <div class="row d-flex justify-content-center">
        <!--  -->
        <%for(let i = 3; i < (restaurant.length); i++){%>
        <div class="col-4 has-bg-img bg-blend-overlay restaurant">
          <a href="/restaurantfinder/paris/<%=restaurant[i].id%>"
            ><img
              class="bg-img"
              src="<%=restaurant[i].img%>"
              alt="<%=restaurant[i].name%>"
            />
            <div class="card_title">
              <h2><%=restaurant[i].name%></h2>
            </div>
          </a>
        </div>
        <% }%>
      </div>
    </div>
    <%- include('./partials/footer.ejs')%> <%-
    include('./partials/scripts.ejs')%>
  </body>
</html>
