<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs')%>
  <body>
    <%- include('./partials/nav.ejs')%>
    <div class="container text-center">
      <h1 class="m-3"><%=restaurant[0].city%></h1>
      <h3>The most exclusive restaurants</h3>
      <div class="container my-5">
        <div class="row">
          <%for(let i = 0; i< (restaurant.length - 3); i++){%>
          <div class="card col-4">
            <img
              class="card-img-top"
              src="<%=restaurant[i].img%>"
              alt="<%=restaurant[i].name%>"
            />
            <div class="card-body">
              <h3 class="card-title"><%=restaurant[i].name%></h3>
              <a
                href="/restaurantfinder/paris/<%=restaurant[i].id%>"
                class="btn btn-light"
                >Click me!</a
              >
            </div>
          </div>

          <% }%>
        </div>
        <div class="row">
          <%for(let i = 0; (i + 3) < restaurant.length; i++){%>
          <div class="card col-4">
            <img
              class="card-img-top"
              src="<%=restaurant[i].img%>"
              alt="<%=restaurant[i].name%>"
            />
            <div class="card-body">
              <h3 class="card-title"><%=restaurant[i].name%></h3>
              <a
                href="/restaurantfinder/paris/<%=restaurant[i].id%>"
                class="btn btn-light"
                >Click me!</a
              >
            </div>
          </div>
          <% }%>
        </div>
      </div>
    </div>
  </body>
</html>
